{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true, // Skip type checking of declaration files.
    "strict": false, // Disable all strict type-checking options.
    "noImplicitAny": false, // Allow 'any' type.
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noUnusedLocals": false, // Allow unused local variables.
    "noUnusedParameters": false, // Allow unused parameters.
    "noFallthroughCasesInSwitch": false, // Allow fallthrough cases in switch statements.
    "skipDefaultLibCheck": true, // Skip checking .d.ts files that are included with TypeScript.
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "types": ["node"], // Include type definitions for Node.js
    "noPropertyAccessFromIndexSignature": false, // Disable errors for accessing properties via index signatures.
    "noStrictGenericChecks": true, // Disable strict checking of generic signatures.
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export.
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES Modules.
    "forceConsistentCasingInFileNames": false, // Disable consistent casing check for file names.
    "ignoreDeprecations": "5.0" // Ignore deprecation warnings for TypeScript 5.0
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"], // Exclude unnecessary directories.
  "references": [{ "path": "./tsconfig.node.json" }]
}
